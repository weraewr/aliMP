/* 跳回app */
.backToApp {
  position: fixed;
  bottom: 240rpx;
  right: 0;
  border-radius: 30rpx 0 0 30rpx;
  width: 206rpx;
  height: 60rpx;
  background-color: rgba(253, 67, 50, 0.88);
  padding: 0;
  padding-left: 24rpx;
  color: #fff;
  font-size: 28rpx;
  font-family: 'PingFang-SC-Medium';
  text-align: left;
  line-height: 60rpx;
  -webkit-transform: translateX(206rpx);
          transform: translateX(206rpx);
  -webkit-transition: all 0.3s;
  transition: all 0.3s;
}
.backToAppIcon {
  position: absolute;
  right: 10rpx;
  top: 20rpx;
  height: 20rpx;
  width: 20rpx;
}
.backToAppActive {
  -webkit-transform: translateX(0);
          transform: translateX(0);
}

