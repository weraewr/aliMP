<view class="container"><view class="newsListWrap"><block wx:for="{{list}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="newsListItemWrap"><block wx:if="{{!item.imgurl}}"><view class="newsListItemWrapNoImg" data-seq="{{item.seq}}" data-event-opts="{{[['tap',[['handleShowArticle',['$event']]]]]}}" bindtap="__e"><view class="newsListItemTitle">{{item.title}}</view><view class="newsListItemDes">{{item.summ}}</view><view class="newsListItemInfo"><block wx:if="{{item.source}}"><view class="newsListItemFrom">{{item.source}}</view></block><view class="newsListItemAgo">{{item.ctime}}</view></view></view></block><block wx:else><view class="{{['newsListItemWrapImg '+(item.readBefore?'newsListItemWrapReadBefore':'')]}}" data-seq="{{item.seq}}" data-event-opts="{{[['tap',[['handleShowArticle',['$event']]]]]}}" bindtap="__e"><view class="newsListItemImg"><image class="newsListItemImgInner" src="{{'https:'+item.imgurl}}"></image></view><view class="newsListItemInnerWrap"><view class="newsListItemTitle">{{item.title}}</view><view class="newsListItemInfo"><block wx:if="{{item.source}}"><view class="newsListItemFrom">{{item.source}}</view></block><view class="newsListItemAgo">{{item.ctime}}</view></view></view></view></block></view></block></view><view class="newsListLoadMoreWrap"><block wx:if="{{!nomore&&!reGet}}"><image class="newsListLoadMoreImg" src="../../static/load.png"></image></block><block wx:if="{{!nomore&&!reGet}}"><view class="newsListLoadMoreText">正在加载更多</view></block><block wx:if="{{nomore&&!reGet}}"><view class="newsListLoadMoreText">没有更多了~</view></block><block wx:if="{{reGet}}"><view data-event-opts="{{[['tap',[['reGetData',['$event']]]]]}}" class="newsListLoadMoreText" bindtap="__e">暂无数据，点击重试</view></block></view></view>