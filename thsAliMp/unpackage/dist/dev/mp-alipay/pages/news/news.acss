page {
  background-color: #fff;
}
.newsTitle {
	font-size: 34rpx;
	color: #323232;
	font-weight: bold;
	padding: 20rpx 30rpx 0;
}
.newsListWrap {
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.newsListItemWrap {
  width: 100%;
  border-bottom: 1rpx solid #eee;
}
.newsListItemWrap:last-child {
  /* border-bottom: 0; */
}
/* 资讯公用 */
.newsListItemTitle {
  font-size: 34rpx;
  font-family: 'PingFang-SC-Medium';
  color: #323232;
}
.newsListItemDes {
  font-size: 28rpx;
  font-family: 'PingFang-SC-Regular';
  color: #666;
}
.newsListItemInfo {
  font-size: 24rpx;
  font-family: 'PingFang-SC-Regular';
  color: #999;
  height: 24rpx;
  line-height: 24rpx;
  display: flex;
}
.newsListItemFrom {
  margin-right: 20rpx;
}
/* 无图资讯 */
.newsListItemWrapNoImg {
  padding-top: 32rpx;
  height: 196rpx;
  box-sizing: border-box;
}
.newsListItemWrapNoImg .newsListItemTitle {
  height: 34rpx;
  line-height: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.newsListItemWrapNoImg .newsListItemDes {
  margin-top: 20rpx;
  height: 28rpx;
  line-height: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.newsListItemWrapNoImg .newsListItemInfo {
  padding-top: 24rpx;
}
/* 有图资讯 */
.newsListItemWrapImg {
  padding-top: 32rpx;
  overflow: hidden;
  height: 214rpx;
  box-sizing: border-box;
}
.newsListItemWrapImg .newsListItemTitle {
  height: 102rpx;
  line-height: 51rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: -6rpx;
}
.newsListItemWrapImg .newsListItemInnerWrap {
  margin-right: 270rpx;
}
.newsListItemWrapImg .newsListItemImg {
  width: 200rpx;
  height: 150rpx;
  /* background-color: lightblue; */
  float: right;
  border-radius: 4rpx;
  overflow: hidden;
}
.newsListItemImgInner {
  width: 100%;
  height: 100%;
}
.newsListItemWrapImg .newsListItemInfo {
  padding-top: 30rpx;
}
/* 已读过 */
.newsListItemWrapReadBefore .newsListItemTitle {
  color: #999;
}
/* 加载更多 */
.newsListLoadMoreWrap {
  height: 80rpx;
  /* background-color: #f5f5f5; */
  display: flex;
  justify-content: center;
  text-align: justify;
  align-items: center;
}
.newsListLoadMoreImg {
  width: 24rpx;
  height: 24rpx;
  -webkit-animation: round 0.8s infinite linear;
          animation: round 0.8s infinite linear;
}
.newsListLoadMoreText {
  font-size: 24rpx;
  line-height: 24rpx;
  height: 24rpx;
  color: #999;
  margin-left: 16rpx;
}
@-webkit-keyframes round {
from {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
to {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes round {
from {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
to {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
/* 股民学校 */
.school {
	background-color: #FFFFFF;
	padding: 20rpx 30rpx;
	border-bottom: 20rpx solid #F5F5F5;
	display: flex;
	flex-direction: row;
}
.schoolTitle {
	font-size: 34rpx;
	color: #323232;
	margin-bottom: 14rpx;
}
.schoolDescript {
	font-size: 28rpx;
	color: #999999;
}
.schoolImg {
	width: 118rpx;
	height: 144rpx;
}
.schoolImg image {
	width: 118rpx;
	height: 144rpx;
}

